        int n,i,j,x=1;
        printf("Enter the number n: ");
        scanf("%d",&n);
        for(i=1; i<=n; i++)
        {
            for(j=1; j<=i; j++)
            {
                if(x<=n)
                {
                    printf("%d ",x);
                    x++;
                }
            }
            printf("\n");
        }
