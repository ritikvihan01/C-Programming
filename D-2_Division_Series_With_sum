        int n,i,j,x=1;
        float sum=0;
        printf("Enter the number n: ");
        scanf("%d",&n);
        for(i=1; i<=n; i++)
        {
            for(j=1; j<=1; j++)
            {
                printf("%d/%d",x,i);
                sum=sum+(float)x/i;
            }
            if(i<n)
            {
                printf("+");
            }
        }
        printf("Sum is: %.2f",sum);
